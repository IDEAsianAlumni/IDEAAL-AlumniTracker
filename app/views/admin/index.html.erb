<h1>ADMIN PAGE</h1>

<h1>Member</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Major</th>
      <th>Resume</th>
      <th>Phone Number</th>
      <th>Prof Track</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.Major %></td>
        <td><%= user.resume_link %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.Professional_Track %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Mentor To Mentee Mappings</h1>
<%= link_to 'Generate new mapping', new_mentor_to_mentee_path %>
<table>
  <thead>
    <tr>
      <th>Mentor</th>
      <th>Mentee</th>
      <th>Status</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentor_to_mentees.each do |mentor_to_mentee| %>
      <tr>
        <td><%= display_user(mentor_to_mentee.mentor_uid) %></td>
        <td><%= display_user(mentor_to_mentee.mentee_uid) %></td>
        <td><%= mentor_to_mentee.status %></td>
        <td><%= mentor_to_mentee.year %></td>
        <td><%= link_to 'Edit', edit_mentor_to_mentee_path(mentor_to_mentee) %></td>
        <td><%= link_to 'Destroy', mentor_to_mentee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back to home", root_path %>