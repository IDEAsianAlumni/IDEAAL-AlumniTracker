<head>
    <style>
        h1 {
            margin-left: 70px;
            margin-right: 70px;
        }
        h2 {
            margin-left: 70px;
            margin-right: 70px;
        }
        h3 {
            margin-left: 70px;
            margin-right: 70px;
        }
        p {
            margin-left: 70px;
            margin-right: 70px;
        }
        table {
            margin-left: 70px;
            margin-right: 70px;
        }
        th {
            margin-left: 10px;
            margin-right: 10px;
        }
        select {
            margin-left: 70px;
            margin-right: 70px;
        }
        .div1 {
            margin-left: 70px;
            margin-right: 70px;
        }
    </style>
</head>



<div id="container">
  <div id="left_column">
    <h3>Member</h3>
    <table>
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Major</th>
          <th>Phone</th>
          <th>Prof Track</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.major %></td>
            <td><%= user.phone_number %></td>
            <td><%= user.professional_track %></td>
            <td><%= user.email %></td>
            <% if user.email != "admin@gmail.com" %>
            <td><%= button_to "Delete", user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div id="right_column">
    <h3>Mentor To Mentee Mappings</h3>
    <%= link_to 'Generate new mapping', new_mentor_to_mentee_path %>
    <table>
      <thead>
        <tr>
          <th>Mentor</th>
          <th>Mentee</th>
          <th>Status</th>
          <th>Year</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @mentor_to_mentees.each do |mentor_to_mentee| %>
          <tr>
            <td><%= display_user(mentor_to_mentee.mentor_uid) %></td>
            <td><%= display_user(mentor_to_mentee.mentee_uid) %></td>
            <td><%= mentor_to_mentee.status %></td>
            <td><%= mentor_to_mentee.year %></td>
            <td><%= link_to 'Edit', edit_mentor_to_mentee_path(mentor_to_mentee) %></td>
            <td><%= link_to 'Delete', mentor_to_mentee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>