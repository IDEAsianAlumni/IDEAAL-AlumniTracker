<br>
<div class="new_member_form">
<h1>Add a Member to Group</h1>
<br>
<%= form_with(model: @group_to_user) do |form| %>
  <% if @group_to_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group_to_user.errors.count, "error") %> prohibited this group_to_user from being saved:</h2>

      <ul>
        <% @group_to_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :uid %>
    <%= form.text_field :uid %>
  </div>

  <div class="field">
    <%= form.label :group_id %>
    <%= form.select :group_id, Group.all.collect { |g| [ g.group_name + ' ' + g.year.to_s, g.id ]} %>
  </div>
  <br><br>
  <div class="actions">
    <%= form.button "Add new Member", type: "submit", :class=> "btn btn-primary", :style=> "color:white" %>
  </div>
<% end %>

<%= link_to 'Back', '/admin', :class=> "btn btn-secondary", :style=> "color:white;" %>
</div>

<style scoped>
.new_member_form {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 40%;
}
.new_member_form select {
  margin-left:0;
}
.new_member_form h1 {
  margin-left:0;
}
</style>